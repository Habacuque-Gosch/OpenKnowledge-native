<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Label (TextView acima dos campos) -->
    <style name="FormLabel">
        <item name="android:textColor">@color/form_label</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <!-- Campo de texto base -->
    <style name="FormField" parent="Widget.Material3.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>
        <item name="boxStrokeColor">@color/primary_blue</item>
<!--        <item name="android:textColorHint">@color/primary_midnightblack</item>-->
    </style>


    <!-- Bot찾o azul s처lido -->
    <style name="FormButton" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/primary_blue</item>
        <item name="android:height">60dp</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <!-- Bot찾o branco (inverso) -->
    <style name="FormButtonWhite" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/primary_blue</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:height">60dp</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Bot찾o com borda azul -->
    <style name="FormButtonOutline" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textColor">@color/white</item>
        <item name="strokeColor">@color/white</item>
        <item name="strokeWidth">1dp</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:height">60dp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
